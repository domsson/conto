#!/usr/bin/env python3

import sys

def usage(invocation):
    print("Usage: " + invocation + " PIXEL_VALUE\n")

def print_result(from_val, from_unit, to_val, to_unit):
    rounded = round(to_val, 3)
    if to_val == rounded:
        print(str(from_val) + " " + from_unit + " = " + str(to_val) + " " + to_unit)
    else:
        print(str(from_val) + " " + from_unit + " â‰ˆ " + str(rounded) + " " + to_unit)

if len(sys.argv) < 2:
    usage(sys.argv[0])
    sys.exit()

px = 0

try:
    px = int(sys.argv[1])
except ValueError:
    usage(sys.argv[0])
    sys.exit()

rem = px / 16.0
pt  = px * 0.75
rel = px * 6.25

print_result(px, "px", rem, "rem")
print_result(px, "px", pt,  "pt")
print_result(px, "px", rel, "%")

sys.exit()
